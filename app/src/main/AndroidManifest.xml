<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.foodio.catering">

    <!-- Menambahkan izin untuk mengakses internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catering"
        tools:targetApi="33">

        <!-- LoginActivity sebagai activity awal -->
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="false" />

        <!-- MainActivity -->
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true" />

        <!-- BaseActivity -->
        <activity
            android:name=".Activity.BaseActivity"
            android:exported="false" />

        <!-- ListFoodsActivity -->
        <activity
            android:name=".Activity.ListFoodsActivity"
            android:exported="false" />

        <!-- CartActivity -->
        <activity
            android:name=".Activity.CartActivity"
            android:exported="false" />

        <!-- DetailActivity -->
        <activity
            android:name=".Activity.DetailActivity"
            android:exported="false" />

        <!-- PaymentActivity -->
        <activity
            android:name=".Activity.PaymentActivity"
            android:exported="false" />

        <!-- HistoryOrderActivity -->
        <activity
            android:name=".Activity.HistoryOrderActivity"
            android:exported="false" />


    </application>
</manifest>
